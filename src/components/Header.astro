---
import Nav from "./Nav.astro"
import { ThemeToggle } from "./ThemeToggle"
import MobileMenu from "./menu/MobileMenu.astro"
---

<header
  class="backdrop-blur supports-[backdrop-filter]:bg-lightend/60 dark:supports-[backdrop-filter]:bg-darkend/75 sticky top-0 z-50"
>
  <div class="max-w-7xl mx-auto p-4 flex justify-between items-center">
    <div>
      <a 
        class="text-xl font-secondary text-darkend dark:text-lightend font-bold mr-6"
        href="/"
        aria-label="Go to Resourcify home page"
        title="Go to main page"
        rel="home"
      >
        <span>Resourcify</span>
      </a>

      <Nav />
    </div>

    <div class="flex items-center gap-4">
      <ThemeToggle client:idle />
      <MobileMenu />
    </div>
  </div>
</header>